<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
    <form class="form-inline">
        <span class="navbar-brand mb-0 h1">Charlotte News Scraper</span>
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/saved" id="saved">Saved Articles</a>
            </li>
            {{#unless articles}}
            <li class="nav-item">
                <button class='btn btn-md btn-success' id='scrape' data-toggle="modal" data-target="#scrapeModal">Scrape Articles!</button>
            </li>
            {{/unless}} {{#if articles}}
            <li class="nav-item">
                <button class='btn btn-md btn-danger' id='clearArticles'>Clear Articles</button>
            </li>
            {{/if}}
        </ul>
    </form>
</nav>
<div class="jumbotron jumbotron-fluid" style="text-align:center; background-color:#e8c166; padding:10em">
    <div class="container">
        <h1 class="display-4">Scrape The News</h1>
        <p class="lead">Click above to get local news articles</p>
    </div>
</div>
<ul class="articleResults">
    {{#each articles}} 
    <div class="media" style="padding: 5em" id:>
        <a href="https:{{url}}"><img src="{{img}}" class="mr-3" alt="..."></a>`
        <div class="media-body">
            <h5 class="mt-0">{{blurb}}</h5>
            <br>
            <button type="button" class="btn btn-primary" id="saveArticle" data-id="{{id}}" data-toggle="modal" data-target="#saveModal">Save Article!</button>
            <button type="button" class="btn btn-secondary" id="createNote" data-id="{{id}}" data-toggle="modal" data-target="#noteModal">Create Note!</button>
        </div>
    </div>
    {{/each}}
</ul>
<div class="modal" tabindex="-1" role="dialog" id="scrapeModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Scrape Complete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Checkout new articles below</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeScrape">Close</button>
      </div>
    </div>
  </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="saveModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Article saved!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Checkout your saved articles from the link above!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="noteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add a note!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Note:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="saveNote">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>